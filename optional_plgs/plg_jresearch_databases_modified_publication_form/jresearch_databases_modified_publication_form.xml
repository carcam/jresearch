<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="jresearch">
	<name>J!Research Databases Modified Publication Form</name>
	<author>Luis Gal&#225;rraga and Florian Prinz</author>
	<creationDate>April 2009</creationDate>
	<copyright>Copyright (C) 2009 - Luis Gal&#225;rraga</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>shamantobi@gmail.com, prinz.florian@chello.at</authorEmail>
	<authorUrl>http://joomla-research.com</authorUrl>
	<version>1.5</version>
	<description>Modifies normal publication form allowing to retrieve publications from open databases like PubMED among others.</description>
	<files>
		<filename plugin="jresearch_databases_modified_publication_form">jresearch_databases_modified_publication_form.php</filename>
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form/index.html</filename>
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form/tmpl/default.php</filename>
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form/tmpl/edit.php</filename>		
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form/tmpl/index.html</filename>		
	</files>
	<params>
		<param name="database" type="list" label="JRESEARCH_EXTERNAL_DATABASE" description="JRESEARCH_EXTERNAL_DATABASE_DESCRIPTION" default="pubmed">
			<option value="pubmed">PubMED</option> 	
		</param>
	</params>
</install>