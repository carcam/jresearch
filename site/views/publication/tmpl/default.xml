<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="JRESEARCH_PUBLICATION_DESCRIPTION">
		<message>JRESEARCH_PUBLICATION_DESCRIPTION_VIEW_MESSAGE</message>
	</layout>
	<state>
		<name>JRESEARCH_PUBLICATION_DESCRIPTION</name>
		<description>JRESEARCH_PUBLICATION_DESCRIPTION_VIEW_MESSAGE</description>
		<url>
			<param type="sql" name="id" label="JRESEARCH_PUBLICATION" 
			description="Publication displayed" query="SELECT id as value, alias as id FROM #__jresearch_publication WHERE published = 1 AND internal=1" />	
			<param type="hidden" name="task" default="show" />
		</url>
		<params>
			<param type="list" name="show_journal_acceptance_rate" default="1">
				<option value="no">No</option>
				<option value="yes">Yes</option>
			</param>
			<param type="list" name="show_awards" default="yes">
				<option value="no">No</option>
				<option value="yes">Yes</option>
			</param>
			<param type="list" name="show_impact_factor" default="yes">
				<option value="no">No</option>
				<option value="yes">Yes</option>
			</param>			
			<param name="publications_allow_comentaries" label="JRESEARCH_CONFIG_ALLOW_COMENTARIES" type="radio" default="no">
				<option value="yes">Yes</option>
				<option value="no">No</option>
			</param>
			<param name="publications_allow_comentaries_from" label="JRESEARCH_CONFIG_ALLOW_COMENTARIES_FROM" type="radio" default="users">
				<option value="everyone">JRESEARCH_EVERYONE</option>
				<option value="users">JRESEARCH_AUTHENTICATED</option>
			</param>
			<param type="spacer" />
			<param name="show_export_bibtex" type="radio" default="no" label="JRESEARCH_PUBLICATION_EXPORT_BIBTEX" description="JRESEARCH_PUBLICATION_EXPORT_BIBTEX_DESCRIPTION">
				<option value="yes">Yes</option>
				<option value="no">No</option>						
			</param>			
			<param name="show_export_ris" type="radio" default="no" label="JRESEARCH_PUBLICATION_EXPORT_RIS" description="JRESEARCH_PUBLICATION_EXPORT_RIS_DESCRIPTION">
				<option value="yes">Yes</option>
				<option value="no">No</option>						
			</param>			
			<param name="show_export_mods" type="radio" default="no" label="JRESEARCH_PUBLICATION_EXPORT_MODS" description="JRESEARCH_PUBLICATION_EXPORT_MODS_DESCRIPTION">
				<option value="yes">Yes</option>
				<option value="no">No</option>						
			</param>
		</params>
	</state>
</metadata>