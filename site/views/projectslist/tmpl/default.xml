				<option value="1">Yes</option>
			</param>
			
			<param name="order" type="list" label="JRESEARCH_PROJECT_ORDER" default="title">
				<option value="title">Default (Title)</option>
				<option value="start_date">Start date</option>
				<option value="finance_value">Finance value</option>
			</param>
			
			<param name="order_Dir" type="radio" label="JRESEARCH_PROJECT_ORDER_DIR" default="ASC">
				<option value="ASC">Ascending</option>
				<option value="DESC">Descending</option>
			</param>
