<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset name="basic" addfieldpath="/administrator/components/com_jresearch/models/fields">
                <field
                        id="id"
                        name="id"
                        type="hidden"
                />
                <field
                        id="title"
                        name="title"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_TITLE"
                        required="true"
                />
                <field
                        id="alias"
                        name="alias"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JFIELD_ALIAS_LABEL"
                        description="JFIELD_ALIAS_DESC"
                />
                <field
                        id="year"
                        name="year"
                        type="text"
                        size="5"
                        maxlength="4"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_YEAR"
                        validate="year"
                />
                <field
                        id="id_research_area"
                        name="id_research_area"
                        type="researchareaslist"
                        size="5"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_RESEARCH_AREAS"
                        multiple="true"
                />
                <field
                	id="supertype"
                	name="supertype"
                	type="list"
                	label="JRESEARCH_MAIN_TYPE"
                >
                	<option value="none">JRESEARCH_NONE</option>
					<option value="program_effectiveness">JRESEARCH_PROGRAM_EFFECTIVENESS</option>
					<option value="di_overview_and_background">JRESEARCH_DI_OVERVIEW_AND_BACKGROUND</option>
					<option value="implementation_support">JRESEARCH_IMPLEMENTATION_SUPPORT</option>
					<option value="di_curricula">JRESEARCH_DI_CURRICULA</option>
                </field>                
                <field
                        id="url"
                        name="url"
                        type="text"
                        size="50"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="URL"
                        validate="url"
                />
                <field
                        id="keywords"
                        name="keywords"
                        type="text"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_KEYWORDS"
                        validate="keywords"
                        description="JRESEARCH_FIELD_KEYWORDS_DESC"                        
                />
                <field
                        id="citekey"
                        name="citekey"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_CITEKEY"
                        description="JRESEARCH_CITEKEY_TOOLTIP"
                        required="false"
                />
                <field
                        id="doi"
                        name="doi"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_DOI"
                />
                <field id="published" name="published" type="list"
			label="Published"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

                <field id="internal" name="internal" type="list"
			label="JRESEARCH_INTERNAL"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_CONTENT_FIELD_LANGUAGE_DESC" class="inputbox"
		>
			<option value="*">JALL</option>
		</field>	
                <field
                        id="authors"
                        name="authors"
                        type="authorsselector"
                        class="inputbox"
                        allowPrincipals="false"
                        default=""
                        label="JRESEARCH_AUTHORS"
                />
                <field
                        id="files"
                        name="files"
                        type="attachment"
                        controller="publications"
                        class="inputbox"
                        singleFile="true"
                        label="JRESEARCH_FILE"
                />                
				<field
                        id="abstract"
                        name="abstract"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_ABSTRACT"
                 />                
        </fieldset>
        <fieldset name="extra">
                <field
                        id="cover"
                        name="cover"
                        type="text"
                        size="30"
                        maxlength="255"
                   		class="inputbox"
                        default=""
                        label="JRESEARCH_COVER"
                />
                <field
                        id="awards"
                        name="awards"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_AWARDS"
                />
                <field
                        id="note"
                        name="note"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_NOTE"
                        description="JRESEARCH_NOTE_TOOLTIP"
                />
                <field
                        id="comments"
                        name="comments"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_COMMENTS"
                        description="JRESEARCH_TOOLTIP_COMMENTS"
                />
                <field
                	id="pubtype"
                	name="pubtype"
                	type="hidden"
                	default="article"                	
                />
        </fieldset>
        <fieldset name="specific">
             	 <field 
        		 	id="design_type"
        		 	label="JRESEARCH_DESIGN_TYPE"
        		 	class="inputbox"
        		 	type="text" 
        		 	name="design_type"
        		 	size="20" 
        		 	maxlength="255"
        		 />
        		<field 
        			id="students_included"
					type="text" 
					name="students_included"
					class="inputbox"
					default="" 
					label="JRESEARCH_STUDENTS_INCLUDED"
					size="20" 
					maxlength="255"        		
        		 />
 		       	<field 
        			id="location"
					type="text" 
					name="location"
					class="inputbox"
					default="" 
					label="JRESEARCH_LOCATION"
					size="20" 
					maxlength="255"        		
        		 />
        		 <field 
        		 	id="fidelity_data_collected"
        		 	label="JRESEARCH_FIDELITY_DATA_COLLECTED"
        		 	class="inputbox"
        		 	type="radio" 
        		 	name="fidelity_data_collected"
        		 	default="0"
        		 >
        		    <option value="0">JNO</option>
					<option value="1">JYES</option>
        		 </field>
        		 <field 
        		 	id="other_tags"
        		 	name="other_tags"
        		 	cols="30"
        		 	rows="5"
        		 	label="JRESEARCH_OTHER_TAGS"
        		 	type="textarea"
        		  />        
                <field
                    id="issn"
                    name="issn"
                    type="text"
                    size="20"
                    maxlength="32"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_ISSN"
                />
                <field
                     id="journal"
                     name="journal"
                     type="text"
                     size="20"
                     maxlength="255"
                     class="inputbox"
                     default=""
                     label="JRESEARCH_JOURNAL"
                />
                <field
                     id="volume"
                     name="volume"
                     type="text"
                     size="15"
                     maxlength="30"
                     class="inputbox"
                     default=""
                     label="JRESEARCH_VOLUME"
                />
                <field
                     id="number"
                     name="number"
                     type="text"
                     size="15"
                     maxlength="20"
                     class="inputbox"
                     default=""
                     label="JRESEARCH_NUMBER"
                />
                <field
                      id="pages"
                      name="pages"
                      type="text"
                      size="10"
                      maxlength="20"
                      class="inputbox"
                      default=""
                      label="JRESEARCH_PAGES"
                />
                <field
                      id="month"
                      name="month"
                      type="text"
                      size="15"
                      maxlength="20"
                      class="inputbox"
                      default=""
                      label="JRESEARCH_MONTH"
                />
        </fieldset>
        <fieldset name="conditional">
        		<field name="hits" 
        			id="hits"
        			type="hidden"
        			default="0" 
        		/>
                <field
                	id="resethits"
                	name="resethits"
                	label="JRESEARCH_RESET_HITS"
                	type="radio"
                	default="0"                	
                >
                	<option value="0">JNO</option>
					<option value="1">JYES</option>
           	 	</field> 
                <field id="delete_url" name="delete_url" type="list"
			label="JRESEARCH_DELETE_ATTACHMENT"
			default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
        </fieldset>
</form>