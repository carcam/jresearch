<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0">
	<name>Latest publications</name>
	<creationDate>December 2010</creationDate>
	<author>Luis Galárraga</author>
	<authorEmail>shamantobi@gmail.com</authorEmail>
	<authorUrl>http://joomla-research.com</authorUrl>
	<copyright>(c) Copyright by Luis Galárraga</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>Module for listing newest papers</description>
	<files>
		<filename module="mod_jresearch_latest_publications">mod_jresearch_latest_publications.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
        <language tag="en-GB">en-GB.mod_jresearch_latest_publications.ini</language>
        <language tag="es-ES">es-ES.mod_jresearch_latest_publications.ini</language>        
	</languages>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="PARAMMODULECLASSSUFFIX" description="PARAMMODULECLASSSUFFIX" />
		<param name="limit" type="text" default="5" label="JRESEARCH_LATEST_PUB_OUTCOMING_PAPERS" />
		<param name="query_criteria" type="list" default="publication_date" label="JRESEARCH_LATEST_PUB_QUERY_CRITERIA" description="JRESEARCH_LATEST_PUB_QUERY_CRITERIA_DESC" >		
			<option value="publication_date">JRESEARCH_LATEST_PUB_PUBLICATION_DATE</option>
			<option value="entry_date">JRESEARCH_LATEST_PUB_ENTRY_DATE</option>			
		</param>
		<param name="citationStyle" type="list" default="Vancouver" label="JRESEARCH_LATEST_PUB_STYLE" description="JRESEARCH_LATEST_PUB_STYLE_DESC">
			<option value="none">JRESEARCH_NONE</option>
			<option value="APA">APA</option>
			<option value="IEEE">IEEE</option>
			<option value="MLA">MLA</option>
			<option value="CSE">CSE</option>
			<option value="Chicago">Chicago (Author-Date system)</option>
			<option value="Vancouver">Vancouver</option>
		</param>			
	</params>
</install>