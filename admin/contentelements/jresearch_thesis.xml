<?xml version="1.0" encoding="UTF-8"?>
<joomfish type="contentelement">
	<name>J!Research Thesis</name>
	<author>F. Prinz</author>
	<version>0.1</version>
	<description>Definition for the thesis content of the J!Research component</description>
	<reference type="content">
		<table name="jresearch_thesis">
			<field type="referenceid" name="id" translate="0">ID</field>
			<field type="titletext" name="title" translate="1">Title</field>
			<field type="text" name="url" translate="0">URL</field>
			<field type="text" name="degree" translate="0">Degree</field>
			<field type="text" name="start_date" translate="0">Start Date</field>
			<field type="text" name="end_date" translate="0">End Date</field>
			<field type="text" name="status" translate="0">Status</field>
			<field type="text" name="created_by" translate="0">Created by</field>
			<field type="created_date" name="created" translate="0">Created Date</field>
			<field type="htmltext" name="description" translate="1">Description</field>
			<field type="checked_out_by" name="checked_out" translate="0">Check out by</field>
			<field type="checked_out_date" name="checked_out_time" translate="0">Check out date</field>
		</table>
	</reference>
	<translationfilters>
  	  <published>published</published>
  	  <researcharea>id_research_area</researcharea>
  </translationfilters>
</joomfish>