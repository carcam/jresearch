<?xml version="1.0" encoding="UTF-8"?>
<joomfish type="contentelement">
	<name>J!Research Publication</name>
	<author>F. Prinz</author>
	<version>0.1</version>
	<description>Definition for the publication content of the J!Research component</description>
	<reference type="content">
		<table name="jresearch_publication">
			<field type="referenceid" name="id" translate="0">ID</field>
			<field type="titletext" name="title" translate="1">Title</field>
			<field type="text" name="internal" translate="0">Internal</field>
			<field type="text" name="year" translate="0">Year</field>
			<field type="text" name="citekey" translate="0">Citekey</field>
			<field type="text" name="keywords" translate="1">Keywords</field>
			<field type="text" name="url" translate="0">URL</field>
			<field type="text" name="journal_acceptance_rate" translate="0">Journal acceptance rate</field>
			<field type="text" name="impact_factor" translate="0">Impact factor</field>
			<field type="textarea" name="abstract" translate="1">Abstract</field>
			<field type="textarea" name="note" translate="1">Note</field>
			<field type="textarea" name="awards" translate="1">Awards</field>
			<field type="textarea" name="comments" translate="1">Comments</field>
			<field type="created_date" name="created" translate="0">Created</field>
			<field type="checked_out_by" name="checked_out" translate="0">Check out by</field>
			<field type="checked_out_date" name="checked_out_time" translate="0">Check out date</field>			
			<field type="text" name="issn" translate="0">ISSN</field>
			<field type="text" name="volume" translate="1">Volume</field>
			<field type="text" name="number" translate="0">Number</field>
			<field type="text" name="pages" translate="0">Pages</field>
			<field type="text" name="month" translate="0">Month</field>
			<field type="text" name="journal" translate="1">Journal</field>
			<field type="text" name="crossref" translate="0">Cross reference</field>			
			<field type="text" name="isbn" translate="0">ISBN</field>
			<field type="text" name="publisher" translate="1">Publisher</field>
			<field type="text" name="edition" translate="0">Edition</field>
			<field type="text" name="month" translate="0">Month</field>
			<field type="textarea" name="editor" translate="0">Editor</field>
			<field type="textarea" name="series" translate="1">Series</field>
			<field type="textarea" name="address" translate="0">Address</field>			
			<field type="textarea" name="howpublished" translate="1">How published</field>			
			<field type="text" name="booktitle" translate="1">Book title</field>
			<field type="text" name="organization" translate="1">Organization</field>
			<field type="text" name="digital_source_type" translate="1">Source Type</field>			
			<field type="text" name="day" translate="0">Day</field>
			<field type="text" name="access_date" translate="0">Access Date</field>			
			<field type="text" name="chapter" translate="0">Chapter</field>
			<field type="text" name="type" translate="1">Type</field>
			<field type="textarea" name="key" translate="1">Key</field>
			<field type="textarea" name="school" translate="1">School</field>				
			<field type="textarea" name="extra" translate="1">Extra</field>
			<field type="text" name="online_source_type" translate="1">Source Type</field>									
			<field type="text" name="patent_number" translate="0">Patent number</field>
			<field type="text" name="filing_date" translate="0">Filing date</field>
			<field type="text" name="issue_date" translate="0">Issue date</field>
			<field type="text" name="country" translate="1">Country</field>
			<field type="textarea" name="drawings_dir" translate="0">Drawings directory</field>
			<field type="textarea" name="claims" translate="1">Claims</field>
			<field type="textarea" name="office" translate="1">Office</field>			
			<field type="textarea" name="institution" translate="1">Institution</field>						
			
		</table>
	</reference>
	<translationfilters>
		<published>published</published>
		<author>created_by</author>
		<publicationtype>pubtype</publicationtype>
		<researcharea>id_research_area</researcharea>
	</translationfilters>
</joomfish>