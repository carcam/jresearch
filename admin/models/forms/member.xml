<?xml version="1.0" encoding="UTF-8"?>
<form>
        <fields>
                <field
                    id="id"
                    name="id"
                    type="hidden"
                />
                <field
                    id="firstname"
                    name="firstname"
                    type="text"
                    size="50"
                    maxlength="30"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_FIRST_NAME"
                    required="true"
                />
                <field
                    id="lastname"
                    name="lastname"
                    type="text"
                    size="50"
                    maxlength="30"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_LAST_NAME"
                    required="true"
                />                
                <field
                    id="title"
                    name="title"
                    type="text"
                    size="10"
                    maxlength="10"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_MEMBER_TITLE"
                    required="true"
                />
                <field
                    id="link_to_member"
                    name="link_to_member"
                    type="list"
                    class="inputbox"
                    default="1"
                    label="JRESEARCH_LINK_TO_MEMBER"
                    description="JRESEARCH_LINK_TO_MEMBER_DESCRIPTION"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>                    
                </field>                
                <field
                    id="email"
                    name="email"
                    type="text"
                    size="40"
                    maxlength="255"
                    class="inputbox"
                    default=""
                    validate="email"
                    label="JRESEARCH_CONTACT"
                    required="false"
                />
                <field
                    id="id_research_area"
                    name="id_research_area"
                    type="researchareaslist"
                    size="5"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_RESEARCH_AREAS"
                    multiple="true"
                />                
                <field id="published" name="published" type="list"
                        label="Published"
                        default="1"
                >
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
                <field id="former_member" name="former_member" type="list"
                        label="JRESEARCH_FORMER_MEMBER"
                        default="0"
                >
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>                
                <field
                    id="position"
                    name="position"
                    type="memberpositionslist"
                    class="inputbox"
                    default="0"
                    size="1"                        
                    label="JRESEARCH_MEMBER_POSITION"
                    multiple="false"
                />                             
                <field
                    id="location"
                    name="location"
                    type="text"
                    size="30"
                    maxlength="255"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_LOCATION"
                    required="false"
                /> 	               
                <field
                    id="phone"
                    name="phone"
                    type="text"
                    size="15"
                    maxlength="15"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_PHONE"
                    required="false"
                />                
                <field
                    id="fax"
                    name="fax"
                    type="text"
                    size="15"
                    maxlength="15"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_FAX"
                    required="false"
                />				
                <field
                    id="url_personal_page"
                    name="url_personal_page"
                    type="url"
                    size="30"
                    maxlength="255"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_URL_PERSONAL_PAGE"
                    required="false"
                />
                <field
                    id="google_scholar"
                    name="google_scholar"
                    type="url"
                    size="30"
                    maxlength="255"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_GOOGLE_SCHOLAR_PROFILE"
                    required="false"
                />
                <field
                    id="link_to_website"
                    name="link_to_website"
                    type="list"
                    class="inputbox"
                    default="1"
                    label="JRESEARCH_LINK_TO_WEBSITE"
                    description="JRESEARCH_LINK_TO_WEBSITE_DESCRIPTION"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>                    
                </field>                                
                <field
                    id="url_photo"
                    name="url_photo"
                    type="media"
                    class="inputbox"
                    default=""
                    label="JRESEARCH_URL_PHOTO"
                    required="false"
                />  
                <field
                    id="files"
                    name="files"
                    type="attachment"
                    controller="staff"
                    class="inputbox"
                    singleFile="true"
                    label="JRESEARCH_MEMBER_CV"
                />
                <field name="description" type="editor" class="inputbox"
                        label="JRESEARCH_DESCRIPTION"
                        filter="safehtml" buttons="true"
                />
                <field name="created_by" type="user"
                       label="JRESEARCH_PROFILE_OWNER" 
                       description="JRESEARCH_PROFILE_OWNER" />                 
                <field name="username" type="text" class="readonly"
                label="JRESEARCH_USERNAME" size="20" readonly="true" />				
        </fields>
</form>