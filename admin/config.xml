<?xml version="1.0" encoding="UTF-8"?>
<config>
	<params>
		<param name="thumbnail_enable" type="radio" default="true" label="JRESEARCH_THUMBNAIL_ENABLE" description="JRESEARCH_THUMBNAIL_ENABLE_DESCRIPTION">
			<option value="true">Yes</option>
			<option value="false">No</option>
		</param>
		<param name="show_hits" type="radio" default="yes" label="JRESEARCH_SHOW_HITS" description="JRESEARCH_SHOW_HITS_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		<param type="spacer" />
				
		<param name="citationStyle" type="list" default="APA" label="JRESEARCH_CITATION_STYLE" description="JRESEARCH_CITATION_STYLE_DESCRIPTION">
			<option value="APA">APA</option>
			<option value="IEEE">IEEE</option>
			<option value="MLA">MLA</option>
			<option value="CSE">CSE</option>
			<option value="Chicago">Chicago (Author-Date system)</option>
			<option value="Vancouver">Vancouver</option>
		</param>
		<param name="enable_export_frontend" type="radio" default="no" label="JRESEARCH_PUBLICATIONS_ENABLE_EXPORT">
			<option value="yes">Yes</option>
			<option value="no">No</option>			
		</param>
		<param name="publications_apply_style" type="radio" label="JRESEARCH_PUBLICATIONS_APPLY_STYLE" description="JRESEARCH_PUBLICATIONS_APPLY_STYLE_DESCRIPTION" default="no">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
	
		<param type="spacer" />
		<param name="staff_list_arrangement" type="list" default="vertical" label="JRESEARCH_CONFIG_STAFF_LIST_ARRANGEMENT" description="JRESEARCH_CONFIG_STAFF_LIST_ARRANGEMENT_DESCRIPTION">
			<option value="vertical">JRESEARCH_VERTICAL</option>
			<option value="horizontal">JRESEARCH_HORIZONTAL</option>
		</param>
		<param name="staff_format" type="list" default="last_first" label="JRESEARCH_CONFIG_STAFF_FORMAT" description="JRESEARCH_CONFIG_STAFF_FORMAT_DESCRIPTION">
			<option value="last_first">JRESEARCH_LASTNAME_FIRSTNAME</option>
			<option value="first_last">JRESEARCH_FIRSTNAME_LASTNAME</option>			
		</param>				
		<param name="member_image_width" default="1024" label="JRESEARCH_MEMBER_IMAGE_WIDTH" type="text" />
		<param name="member_image_height" default="768" label="JRESEARCH_MEMBER_IMAGE_HEIGHT" type="text" />
		
		<param type="spacer" />		
		<param name="show_bibtex" type="radio" default="yes" label="JRESEARCH_CONFIG_SHOW_BIBTEX_FRONTEND" description="JRESEARCH_CONFIG_SHOW_BIBTEX_FRONTEND_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>		
		<param name="everybody_can_edit" type="radio" default="no" label="JRESEARCH_CONFIG_EVERY_EDIT" description="JRESEARCH_CONFIG_EVERY_EDIT_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		
		<param type="spacer" />
		
		<param name="show_acceptance_rate" type="radio" default="yes" label="JRESEARCH_CONFIG_ACCEPTANCE" description="JRESEARCH_CONFIG_ACCEPTANCE_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		
		<param name="show_edit" type="radio" default="no" label="JRESEARCH_CONFIG_EDIT" description="JRESEARCH_CONFIG_EDIT_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		
		<param name="show_edit_list" type="radio" default="no" label="JRESEARCH_CONFIG_EDIT_LIST" description="JRESEARCH_CONFIG_EDIT_LIST_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
		
		<param name="allow_upload" type="radio" default="yes" label="JRESEARCH_CONFIG_UPLOAD" description="JRESEARCH_CONFIG_UPLOAD_DESCRIPTION">
			<option value="yes">Yes</option>
			<option value="no">No</option>
		</param>
						
		<param name="files_root_path" type="hidden" default="files" />			
	</params>
</config>
