	<copyright>(c) Copyright by Luis Galárraga, Florian Prinz and J!Research Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>Quick search module for searching publications</description>
	<files>
		<filename module="mod_jresearch_quick_search">mod_jresearch_quick_search.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
        <language tag="en-GB">en-GB.mod_jresearch_quick_search.ini</language>
