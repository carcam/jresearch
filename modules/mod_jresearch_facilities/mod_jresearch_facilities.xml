<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0">
	<name>J!Research Facilities</name>
	<creationDate>May 2009</creationDate>
	<author>Florian Prinz</author>
	<authorEmail>prinz.florian@chello.at</authorEmail>
	<authorUrl>www.fivesigns.com</authorUrl>
	<copyright>(c) Copyright by Florian Prinz and Luis Gal√°rraga of the J!Research Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>Facilities is a module for the component J!Research. It uses the facilities of it.</description>
	<files>
		<filename module="mod_jresearch_facilities">mod_jresearch_facilities.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
        <language tag="en-GB">en-GB.mod_jresearch_facilities.ini</language>
	</languages>
	<params addpath="/administrator/components/com_jresearch/elements">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="id_research_area" type="researchareas" label="JRESEARCH_RESEARCH_AREA_SELECTION" description="JRESEARCH_RESEARCH_AREA_SELECTION_DESCRIPTION" default="0"/>
		<param name="order" type="radio" default="name" label="Order" description="PARAMORDER">
			<option value="name">Name</option>
			<option value="ordering">Ordering</option>
		</param>
		<param name="order_dir" type="radio" default="ASC" label="Order Direction" description="PARAMORDERDIR">
			<option value="ASC">Ascending</option>
			<option value="DESC">Descending</option>
		</param>
	</params>
</install>
