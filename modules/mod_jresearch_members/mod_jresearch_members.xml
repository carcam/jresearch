<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/module-install.dtd">
<install type="module" version="1.5.0">
	<name>J!Research Members</name>
	<creationDate>May 2009</creationDate>
	<author>Florian Prinz</author>
	<authorEmail>prinz.florian@chello.at</authorEmail>
	<authorUrl>www.fivesigns.com</authorUrl>
	<copyright>(c) Copyright by Florian Prinz and Luis Gal√°rraga of the J!Research Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>Members is a module for the component J!Research. It uses the members of it.</description>
	<files>
		<filename module="mod_jresearch_members">mod_jresearch_members.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
        <language tag="en-GB">en-GB.mod_jresearch_members.ini</language>
	</languages>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="former_members" type="radio" default="0" label="Which members?" description="PARAMFORMERMEMBERS">
			<option value="0">All</option>
			<option value="-1">Only real members</option>
			<option value="1">Only former members</option>
		</param>
		<param name="order" type="radio" default="lastname" label="Order" description="PARAMORDER">
			<option value="lastname">Name</option>
			<option value="ordering">Ordering</option>
		</param>
		<param name="order_dir" type="radio" default="ASC" label="Order Direction" description="PARAMORDERDIR">
			<option value="ASC">Ascending</option>
			<option value="DESC">Descending</option>
		</param>
	</params>
</install>
