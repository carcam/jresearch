<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="basic">
        <field
                id="id"
                name="id"
                type="hidden"
        />
        <field
                id="title"
                name="title"
                type="text"
                size="40"
                maxlength="255"
                class="inputbox"
                default=""
                label="JRESEARCH_TITLE"
                required="true"
        />
        <field
                id="alias"
                name="alias"
                type="text"
                size="40"
                maxlength="255"
                class="inputbox"
                default=""
                label="JFIELD_ALIAS_LABEL"
                description="JFIELD_ALIAS_DESC"
        />
        <field
                id="year"
                name="year"
                type="text"
                size="5"
                maxlength="4"
                class="inputbox"
                default=""
                label="JRESEARCH_YEAR"
                validate="year"
        />
        <field
                id="id_research_area"
                name="id_research_area"
                type="researchareaslist"
                size="5"
                class="inputbox"
                default=""
                label="JRESEARCH_RESEARCH_AREAS"
                multiple="true"
        />
        <field
                id="keywords"
                name="keywords"
                type="keywords"
                size="30"
                maxlength="255"
                class="inputbox"
                default=""
                label="JRESEARCH_KEYWORDS"
                validate="keywords"
                description="JRESEARCH_FIELD_KEYWORDS_DESC"
        />
        <field
                id="citekey"
                name="citekey"
                type="text"
                size="20"
                maxlength="255"
                class="inputbox"
                default=""
                label="JRESEARCH_CITEKEY"
                description="JRESEARCH_CITEKEY_TOOLTIP"
                required="false"
        />
        <field
                id="doi"
                name="doi"
                type="text"
                size="20"
                maxlength="255"
                class="inputbox"
                default=""
                label="JRESEARCH_DOI"
        />
        <field id="published" name="published" type="list"
                label="Published"
                default="1"
        >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
        </field>

        <field id="internal" name="internal" type="list"
                label="JRESEARCH_INTERNAL"
                default="1"
        >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
        </field>
        <field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
                description="COM_CONTENT_FIELD_LANGUAGE_DESC" class="inputbox"
        >
                <option value="*">JALL</option>
        </field>		
        <field
                id="authors"
                name="authors"
                type="authorsselector"
                class="inputbox"
                default=""
                label="JRESEARCH_AUTHORS"
        />
        <field
                id="files"
                name="files"
                type="attachment"
                controller="publications"
                singleFile="false"
                mode="upload"
                label="JRESEARCH_FILE"
        /> 
        <field name="created_by" type="user"
                label="JRESEARCH_ITEM_CREATOR" />            
        <field
                id="abstract"
                name="abstract"
                type="textarea"
                rows="20"
                class="abstractfield"
                default=""
                label="JRESEARCH_ABSTRACT"
         />                 
    </fieldset>
    <fieldset name="extra">
        <field
                id="cover"
                name="cover"
                type="text"
                size="30"
                maxlength="255"
                        class="inputbox"
                default=""
                label="JRESEARCH_COVER"
        />
        <field
                id="awards"
                name="awards"
                type="textarea"
                rows="5"
                cols="50"
                class="inputbox"
                default=""
                label="JRESEARCH_AWARDS"
        />
        <field
                id="note"
                name="note"
                type="textarea"
                rows="5"
                cols="50"
                class="inputbox"
                default=""
                label="JRESEARCH_NOTE"
                description="JRESEARCH_NOTE_TOOLTIP"
        />
        <field
                id="comments"
                name="comments"
                type="textarea"
                rows="5"
                cols="50"
                class="inputbox"
                default=""
                label="JRESEARCH_COMMENTS"
                description="JRESEARCH_TOOLTIP_COMMENTS"
        />
        <field
                id="pubtype"
                name="pubtype"
                type="hidden"
                default="article"                	
        />
    </fieldset>
    <fieldset name="specific">
        <field
                id="issn"
                name="issn"
                type="text"
                size="20"
                maxlength="32"
                class="inputbox"
                default=""
                label="JRESEARCH_ISSN"
        />
        <field
                id="journal"
                name="journal"
                type="text"
                size="20"
                maxlength="255"
                class="inputbox"
                default=""
                label="JRESEARCH_JOURNAL"
        />
        <field
                id="volume"
                name="volume"
                type="text"
                size="15"
                maxlength="30"
                class="inputbox"
                default=""
                label="JRESEARCH_VOLUME"
        />
        <field
                id="number"
                name="number"
                type="text"
                size="15"
                maxlength="20"
                class="inputbox"
                default=""
                label="JRESEARCH_NUMBER"
        />
        <field
                id="pages"
                name="pages"
                type="text"
                size="10"
                maxlength="20"
                class="inputbox"
                default=""
                label="JRESEARCH_PAGES"
        />
        <field
                id="month"
                name="month"
                type="text"
                size="15"
                maxlength="20"
                class="inputbox"
                default=""
                label="JRESEARCH_MONTH"
        />
    </fieldset>
    <fieldset name="conditional">
        <field name="hits" 
                id="hits"
                type="hidden"
                default="0" 
        />
        <field
                id="resethits"
                name="resethits"
                label="JRESEARCH_RESET_HITS"
                type="list"
                default="0"                	
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
</form>