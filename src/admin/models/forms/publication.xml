<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset name="basic">
                <field
                        id="id"
                        name="id"
                        type="hidden"
                />
                <field
                        id="title"
                        name="title"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_TITLE"
                        required="true"
                />
                <field
                        id="alias"
                        name="alias"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JFIELD_ALIAS_LABEL"
                        description="JFIELD_ALIAS_DESC"
                />
                <field
                        id="year"
                        name="year"
                        type="text"
                        size="5"
                        maxlength="4"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_YEAR"
                />
                <field
                        id="id_research_area"
                        name="id_research_area"
                        type="researcharealist"
                        size="1"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_RESEARCH_AREA"
                />
                <field
                        id="url"
                        name="url"
                        type="text"
                        size="50"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="URL"
                />
                <field
                        id="keywords"
                        name="keywords"
                        type="text"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_KEYWORDS"
                        description="JRESEARCH_FIELD_KEYWORDS_DESC"                        
                />
                <field
                        id="citekey"
                        name="citekey"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_CITEKEY"
                        description="JRESEARCH_CITEKEY_TOOLTIP"
                        required="true"
                />
                <field
                        id="doi"
                        name="doi"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_DOI"
                />
                <field id="published" name="published" type="radio"
			label="Published"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

                <field id="internal" name="internal" type="radio"
			label="JRESEARCH_INTERNAL"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
                <field
                        id="file_url"
                        name="file_url"
                        type="jresearchfileuploader"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_FILE"
                />
                <field
                        id="authors"
                        name="authors"
                        type="jresearchauthorsselector"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_AUTHORS"
                />
                <field
                        id="abstract"
                        name="abstract"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_ABSTRACT"
                 />

        </fieldset>
        <fieldset name="extra">
                <field
                        id="cover"
                        name="cover"
                        type="text"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_COVER"
                />
                <field
                        id="awards"
                        name="awards"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_AWARDS"
                />
                <field
                        id="note"
                        name="note"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_NOTE"
                        description="JRESEARCH_NOTE_TOOLTIP"
                />
                <field
                        id="comments"
                        name="comments"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_COMMENTS"
                        description="JRESEARCH_TOOLTIP_COMMENTS"
                />
        </fieldset>
</form>
