<?xml version="1.0" encoding="utf-8"?>
<form>
        <fields>
                <field
                        id="id"
                        name="id"
                        type="hidden"
                />
                <field
                        id="name"
                        name="name"
                        type="text"
                        size="50"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_TITLE"
                        required="true"
                />
                <field
                        id="alias"
                        name="alias"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JFIELD_ALIAS_LABEL"
                        description="JFIELD_ALIAS_DESC"
                />
                <field id="published" name="published" type="radio"
			label="Published"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="description" type="editor" class="inputbox"
			label="JRESEARCH_DESCRIPTION"
			filter="safehtml" buttons="true"
                        />
		<field name="rules" type="rules" class="inputbox" filter="rules"
				component="com_jresearch" section="member" validate="rules"
		/>
                        
        </fields>
</form>