<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset name="basic">
                <field
                        id="id"
                        name="id"
                        type="hidden"
                />
                <field
                        id="title"
                        name="title"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_TITLE"
                        required="true"
                />
                <field
                        id="alias"
                        name="alias"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JFIELD_ALIAS_LABEL"
                        description="JFIELD_ALIAS_DESC"
                />
                <field
                        id="year"
                        name="year"
                        type="text"
                        size="5"
                        maxlength="4"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_YEAR"
                        validate="year"
                />
                <field
                        id="id_research_area"
                        name="id_research_area"
                        type="researchareaslist"
                        size="5"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_RESEARCH_AREAS"
                        multiple="true"
                />
                <field
                        id="url"
                        name="url"
                        type="text"
                        size="50"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="URL"
                        validate="url"
                />
                <field
                        id="keywords"
                        name="keywords"
                        type="text"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_KEYWORDS"
                        validate="keywords"
                        description="JRESEARCH_FIELD_KEYWORDS_DESC"
                />
                <field
                        id="citekey"
                        name="citekey"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_CITEKEY"
                        description="JRESEARCH_CITEKEY_TOOLTIP"
                        required="false"
                />
                <field
                        id="doi"
                        name="doi"
                        type="text"
                        size="20"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_DOI"
                />
                <field id="published" name="published" type="radio"
			label="Published"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

                <field id="internal" name="internal" type="radio"
			label="JRESEARCH_INTERNAL"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_CONTENT_FIELD_LANGUAGE_DESC" class="inputbox"
		>
			<option value="*">JALL</option>
		</field>		
                <field
                        id="authors"
                        name="authors"
                        type="authorsselector"
                        class="inputbox"
                        allowPrincipals="false"
                        default=""
                        label="JRESEARCH_AUTHORS"
                />
                <field
                        id="files"
                        name="files"
                        type="attachment"
                        controller="publications"
                        class="inputbox"
                        singleFile="true"
                        label="JRESEARCH_FILE"
                />                
                <field
                        id="abstract"
                        name="abstract"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_ABSTRACT"
                 />
        </fieldset>
        <fieldset name="extra">
                <field
                        id="cover"
                        name="cover"
                        type="text"
                        size="30"
                        maxlength="255"
                   		class="inputbox"
                        default=""
                        label="JRESEARCH_COVER"
                />
                <field
                        id="awards"
                        name="awards"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_AWARDS"
                />
                <field
                        id="note"
                        name="note"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_NOTE"
                        description="JRESEARCH_NOTE_TOOLTIP"
                />
                <field
                        id="comments"
                        name="comments"
                        type="textarea"
                        rows="5"
                        cols="50"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_COMMENTS"
                        description="JRESEARCH_TOOLTIP_COMMENTS"
                />
                <field
                	id="pubtype"
                	name="pubtype"
                	type="hidden"
                	default="mastersthesis"                	
                />
        </fieldset>
        <fieldset name="specific">
                <field
                        id="institution"
                        name="institution"
                        type="text"
                        size="30"
                        maxlength="256"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_INSTITUTION"
                />
				<field
                        id="address"
                        name="address"
                        type="text"
                        size="20"
                        maxlength="256"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_ADDRESS"
                /> 
				<field
                        id="type"
                        name="type"
                        type="text"
                        size="15"
                        maxlength="20"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_TYPE"
                />                               
                <field
                        id="month"
                        name="month"
                        type="text"
                        size="15"
                        maxlength="20"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_MONTH"
                />
        </fieldset>
        <fieldset name="conditional">
        		<field name="hits" 
        			id="hits"
        			type="hidden"
        			default="0" 
        		/>
                <field
                	id="resethits"
                	name="resethits"
                	label="JRESEARCH_RESET_HITS"
                	type="radio"
                	default="0"                	
                >
                	<option value="0">JNO</option>
					<option value="1">JYES</option>
           	 	</field> 
                <field id="delete_url" name="delete_url" type="radio"
			label="JRESEARCH_DELETE_ATTACHMENT"
			default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
        </fieldset>
</form>
