<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields>
		<fieldset name="request"
			addfieldpath="/administrator/components/com_jresearch/models/fields">
                <field
                        id="id"
                        name="id"
                        type="hidden"
                />
                <field
                        id="firstname"
                        name="firstname"
                        type="text"
                        size="50"
                        maxlength="30"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_FIRST_NAME"
                        required="true"
                />
				<field
                        id="lastname"
                        name="lastname"
                        type="text"
                        size="50"
                        maxlength="30"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_LAST_NAME"
                        required="true"
                />                
				<field
                        id="title"
                        name="title"
                        type="text"
                        size="10"
                        maxlength="10"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_MEMBER_TITLE"
                        required="true"
                />                
                <field
                        id="email"
                        name="alias"
                        type="text"
                        size="40"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        validate="email"
                        label="JRESEARCH_EMAIL"
                        required="false"
                />
                <field
                        id="id_research_area"
                        name="id_research_area"
                        type="researchareaslist"
                        size="5"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_RESEARCH_AREAS"
                        multiple="true"
                />                
				<field
                        id="location"
                        name="location"
                        type="text"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_LOCATION"
                        required="false"
                /> 	               
				<field
                        id="phone"
                        name="phone"
                        type="text"
                        size="15"
                        maxlength="15"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_PHONE"
                        required="false"
                />                
				<field
                        id="fax"
                        name="fax"
                        type="text"
                        size="15"
                        maxlength="15"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_FAX"
                        required="false"
                />				
				<field
                        id="url_personal_page"
                        name="url_personal_page"
                        type="url"
                        size="30"
                        maxlength="255"
                        class="inputbox"
                        default=""
                        label="JRESEARCH_URL_PERSONAL_PAGE"
                        required="false"
                />
                <field
                        id="files"
                        name="files"
                        type="attachment"
                        controller="staff"
                        class="inputbox"
                        singleFile="true"
                        label="JRESEARCH_MEMBER_CV"
                />
			<field id="delete_url" name="delete_url" type="list"
			label="JRESEARCH_DELETE_ATTACHMENT"
			default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>                                              
				<field name="description" type="editor" class="inputbox"
					label="JRESEARCH_DESCRIPTION"
					filter="safehtml" buttons="true"
                />
			<field name="username" type="text" class="readonly"
			label="JRESEARCH_USERNAME" size="20" readonly="true" />
		</fieldset>					
    </fields>
</form>