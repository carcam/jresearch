<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="JRESEARCH_THESES_LIST">
		<message>JRESEARCH_THESES_LIST_VIEW_MESSAGE</message>
	</layout>
	<state>
		<name>JRESEARCH_THESES_LIST</name>
		<description>JRESEARCH_THESES_LIST_VIEW_MESSAGE</description>
		<params>
			<param name="theses_entries_per_page" default="25" label="JRESEARCH_CONFIG_THESES_PER_PAGE" type="text" />				
			<param name="theses_order" label="JRESEARCH_SORTED" type="radio" default="asc">
				<option value="asc">JRESEARCH_ASCENDING</option>
				<option value="desc">JRESEARCH_DESCENDING</option>
			</param>
			<param name="theses_default_sorting" default="start_date" label="JRESEARCH_ORDER_BY" type="radio">
				<option value="start_date">JRESEARCH_DATE</option>
				<option value="title">JRESEARCH_ALPHABETICAL</option>
			</param>
                        <param name="theses_filterby_status" type="radio" label="JRESEARCH_FILTER_STATUS" default="0">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
                        <param name="theses_status_filter" type="radio" label="JRESEARCH_STATUS" default="not_started">
				<option value="not_started">JRESEARCH_NOT_STARTED</option>
				<option value="in_progress">JRESEARCH_IN_PROGRESS</option>
				<option value="finished">Finished</option>
			</param>
                        <param name="theses_filterby_researcharea" type="radio" label="JRESEARCH_FILTER_RESEARCHAREA" default="0">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
                        <param name="theses_filterby_degree" type="radio" label="JRESEARCH_FILTER_DEGREE" default="0">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
                        <param name="theses_degree_filter" type="radio" label="JRESEARCH_DEGREE" default="bachelor">
				<option value="bachelor">JRESEARCH_BACHELOR</option>
				<option value="master">JRESEARCH_MASTER</option>
				<option value="phd">JRESEARCH_PHD</option>
			</param>
                        <param type="sql" name="theses_filter_area" label="JRESEARCH_RESEARCH_AREA"
			description="JRESEARCH_RESEARCH_AREA" query="SELECT id as value, alias as theses_filter_area FROM #__jresearch_research_area WHERE published = 1" />
		</params>
	</state>
</metadata>