<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="jresearch">
	<name>J!Research Databases Modified Publication Form</name>
	<author>Luis Gal&#225;rraga and Florian Prinz</author>
	<creationDate>April 2009</creationDate>
	<copyright>Copyright (C) 2009 - Luis Gal&#225;rraga</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>shamantobi@gmail.com, prinz.florian@chello.at</authorEmail>
	<authorUrl>http://joomla-research.com</authorUrl>
	<version>1.5</version>
	<description>Modifies normal publication form allowing the retrieval of publications from open databases like PubMED among others via PMID.</description>
	<files>
		<filename plugin="jresearch_databases_modified_publication_form">jresearch_databases_modified_publication_form.php</filename>
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form_scripts/index.html</filename>
		<filename plugin="jresearch_databases_modified_publication_form">plg_jresearch_databases_modified_publication_form_scripts/databases.js</filename>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_jresearch_databases_modified_publication_form.ini</language>
		<language tag="es-ES">es-ES.plg_jresearch_databases_modified_publication_form.ini</language>
		<language tag="de-DE">de-DE.plg_jresearch_databases_modified_publication_form.ini</language>				
	</languages>
	<params>
		<param name="service" type="list" label="External database" description="The database the publications will be retrieved from" default="Pubmed">
			<option value="Pubmed">PubMED</option> 	
		</param>
	</params>
</install>